        <TextBox x:Name="countryId" HorizontalAlignment="Left" Height="23" Margin="76,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <TextBox x:Name="countryName" HorizontalAlignment="Left" Height="23" Margin="76,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>

    </Grid>
</Window>
